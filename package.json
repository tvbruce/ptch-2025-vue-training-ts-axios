{
  "name": "vue3-training-typescript-axios",
  "version": "1.0.0",
  "private": true,
  "description": "Vue3 教育訓練 - TypeScript & Axios 應用的互動式學習平台",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "json-server": "json-server --watch db.json --port 3001",
    "dev:mock": "run-p dev json-server"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "monaco-editor": "^0.52.2",
    "pinia": "^3.0.1",
    "prismjs": "^1.30.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@types/prismjs": "^1.26.5",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "json-server": "^0.17.4",
    "msw": "^2.10.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}